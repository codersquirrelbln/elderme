<h2 class="h2">Edit Profile</h2>
<div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <div><%= link_to "Back", profiles_path, class: 'btn btn-primary' %></div>
  <div container_up>
    <div class="form-inputs">
      <div class="Volunteer">
        <h4 class="who">Who am I</h4>
        <%= radio_button_tag(:user, "Volunteer")  %>
        <%= label_tag(:user, "Volunteer") %>
        <%= radio_button_tag(:user, "Senior") %>
        <%= label_tag(:gender, "Senior") %>
      </div>
      <div class="gender">
        <h4 class="gen">Gender</h4>
        <%= radio_button_tag(:gender, "Male") %>
        <%= label_tag(:gender, "Male") %>
        <%= radio_button_tag(:gender, "Female") %>
        <%= label_tag(:gender, "Female") %>
        <%= radio_button_tag(:gender, "Other") %>
        <%= label_tag(:gender, "Other") %>
      </div>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :age %>
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :biography %>
        <%= f.input :password,
                    hint: "Leave it blank, if you don't want to change it",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    hint: "Please insert your current password to confirm your changes",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>

      <div class="form-actions">
        <div><%=  f.button :submit, "Update", class: 'btn btn-primary' %></div>
        <div><%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-primary', id: 'btn' %></div>
      </div>
    </div>
  </div>
  <% end %>
</div>





