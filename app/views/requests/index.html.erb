<h1>All my Requests</h1>

<!-- iterate through all requests -->
<%= link_to "Back", profiles_path(@request), class: 'btn btn-primary'%>

<div>
  <% @requests.each do |request| %>
    <%= request.date %>
    <%= request.start_time %>
    <%= request.end_time %>
    <%= request.meeting_point %>
    <%= request.event_kind %>
    <%= request.status %>
    <%= request.topic %>
    <%= request.message %>
    <!-- #request.senior_id -->
    <%= request.volunteer_id %>
    <%= link_to "Show", request_path(request), class: 'btn btn-primary'%>
  <% end %>
</div>
<!-- display calendar with corresponding requests in it -->

