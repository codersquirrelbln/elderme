<style>

  .volunteer_link {
    text-decoration: none;
    color: #48ACF0;
  }
   .container {
    width: 50%;
    height: 500px;
  }

</style>


<%= link_to "Back", requests_path(@request), class: 'btn btn-primary'%>
<div class="container">
  <div class="more_info">
    <h1>Meeting Details</h1>
    <ul>
      <div>
       <li> <strong>Date</strong> <%= @request.date.strftime("%b %d, %Y") %> </li>
        <li> <strong>Time</strong> <%= @request.start_time.strftime("%l:%M -")%>
        <%= @request.end_time.strftime("%l:%M") %> </li>
        <li> <strong>Where</strong> <%= @request.meeting_point %> </li>
        <li> <strong>Message</strong> <%= @request.message %> </li>
        <li class="volunteer_link"><strong>With</strong>
          <a href="" class="volunteer_link">
            <%= link_to "#{@request.volunteer.first_name} #{@request.volunteer.last_name}" , profile_path %>
          </a>
        </li>
      </div>
    </ul>
    <div class="info">
      <%= link_to "Edit", edit_request_path(@request), class: 'btn btn-primary'%>
      <%= link_to "Delete", request_path, class: 'btn btn-primary', method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
</div>


