<h1>Show Request</h1>

<%= link_to "Back", requests_path(@request), class: 'btn btn-primary'%>

<div>
  <ul>
    <li> Date: <%= @request.date %> </li>
    <li> From: <%= @request.start_time %> to: <%= @request.end_time %> </li>
    <li> Meeting Point: <%= @request.meeting_point %> </li>
    <li> <%= @request.message %> </li>
    <a href="">

      <%= link_to @request.volunteer.first_name , profile_path %>
    </a>
  </ul>
</div>

