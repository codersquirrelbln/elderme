
<h1>Edit Request</h1>

<%= link_to "Back", requests_path, class: 'btn btn-primary'%>

<%= simple_form_for @request do |f| %>
  <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :start_time, as: :string, required: false, input_html: {class: "timepicker"}%>
  <%= f.input :end_time, as: :string, required: false, input_html: {class: "timepicker"} %>
  <%= f.input :meeting_point %>
  <%= f.input :event_kind %>
  <!-- filled in automatically? -->
  <%= f.input :message %>
  <%= f.submit "Save", id: 'sweet-alert-edit', class: 'btn btn-primary alert'%>
<% end %>


<%= link_to "Cancel", request_path, class: 'btn btn-primary'%>
