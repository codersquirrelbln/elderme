<h1>New request (message)</h1>
<%= link_to "Back", profile_path(@volunteer), class: 'btn btn-primary'%>

<%= simple_form_for [@volunteer, @request] do |f| %>
  <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :meeting_point %>
  <%= f.input :event_kind %>
  <%= f.input :topic %>
  <!-- filled in automatically? -->
  <%= f.text_field :message %>
  <%= f.submit %>
<% end %>

<%= link_to "Cancel", profile_path(@volunteer), class: 'btn btn-primary'%>



<%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Go", class: "btn btn-primary" %>
    <% end %>
