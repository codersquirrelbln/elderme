<style>
  .container {
   width: 50%;
   height:500px;
  }

  .butu {
    display: flex;
    justify-content: center;
  }
  #back {
    margin-top: 40px;
  }
</style>
<%= link_to "Back", profile_path(@volunteer), class: 'btn btn-primary', id: 'back'%>
<h1>New request (message)</h1>
<div class="container">
<%= simple_form_for [@volunteer, @request] do |f| %>
  <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :start_time, as: :string, required: false, input_html: {class: "timepicker"}%>
  <%= f.input :end_time, as: :string, required: false, input_html: {class: "timepicker"} %>
  <%= f.input :meeting_point %>
  <label>Message</label>
  <%= f.text_field :message %>
  <div class="butu">
  <%= f.submit "Create Request", id: 'sweet-alert', class: 'btn btn-primary new-request' %>
  <%= f.submit "Create hidden", class: 'btn btn-primary alert new-request d-none' %>
<% end %>
<%= link_to "Cancel", profile_path(@volunteer), class: 'btn btn-primary'%>
</div>
</div>


