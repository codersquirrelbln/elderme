 <style>
  .container-info-profile {
    margin-left: 20px;
    margin-right: 20px;
    width: 100%;
  }

  .home-wrapper-2 .card-volunteer {
  overflow: hidden;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  border-radius: 15px;
  padding: 5px;
  text-align: center;
  background-repeat: no-repeat !important;
  background-size: cover;
  margin-top: 7px;
  margin-right: auto;
  margin-left: auto;
  height: 600px;
  float: left;
}

.card-volunteer h1 {
  font-size: 16px;
  font-weight: bold;
  margin: 0;
}

.photo-profile1 {
  height: 195px;
  width: 225px;
  margin: 0 auto;
  background-position: center;
  border-radius:50%;
  border: 4px solid white;
  background-size: cover;
  margin-top : 20px;
}

.photo-profile1 img {
  z-index:1;
}

.background img {
  z-index:0;
}

h2 {
  font-size: 25px;
  font-weight: bold;
  margin-top: 10px;
}

.fas.fa-dice {
  margin-top: 50px;
  border-radius : 500px;
  border: 3px solid black;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  margin-right: 15px;

}

.fas.fa-utensils {
  margin-top: 50px;
  border-radius : 500px;
  border: 3px solid black;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  margin-right: 15px;
}

.fas.fa-theater-masks {
  margin-top: 50px;
  border-radius : 500px;
  border: 3px solid black;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  margin-right: 15px;
}

.icones {
  display: flex;
  align-items: center;
  justify-content: center;
}
  .send {
    margin-top: 70px;
  }

  .biographay p {
    list-style: none;
  }

  .video {
    text-align:center;
  }

  .watch {
    text-align:center;
    margin-top: 70px;
  }

  #video-container {
  overflow: hidden;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  border-radius: 15px;
  padding: 10px;
  text-align: center;
  background-repeat: no-repeat !important;
  background-size: cover;
  margin-top: 7px;
  margin-right: auto;
  margin-left: auto;
  height: 600px;
  }

  #back-btn {
    margin-top: 50px;
  }
  .row {
    display: flex;
    flex-wrap: wrap;
    margin-right: 36px;
}
 </style>

<div class ="home-wrapper-2">

<div class="container-info-profile">
  <%= link_to "Back", profiles_path, class: 'btn btn-primary', id: 'back-btn'%>
  <div class="row">
    <div class="col-5">
      <div class="card-volunteer" style="background-image: url('<%= cl_image_path("shape-card-volunteer")%>');">
        <div>
          <div class ="photo-profile1" style="background-image: url('<%= cl_image_path(@volunteer.picture) %>')">
          </div>
            <h2><%= @volunteer.first_name %>  <%= @volunteer.last_name %></h2>
            <ul>
            <li><%= @volunteer.city %></li>
            <li><%= @volunteer.age %> Years old</li>
            <li><%= @volunteer.mobility %></li>
          </ul>
            <div class="icones">
            <i class="fas fa-dice fa-border fa-2x"></i> <i class="fas fa-utensils fa-border fa-2x"></i> <i class="fas fa-theater-masks fa-border fa-2x" ></i>
            </div>
            </div>
            <br>
            <div class="biography">
            <p><%= @volunteer.biography %></p>

          </div>
        <div class="send">
              <%= link_to "Send message", new_user_request_path(@volunteer), class: 'btn btn-primary' %>
              </div>

        </div>
       </div>
       <div class="col-7" id="video-container">
        <div>
        </div>
        <div class="video">
          <video>Video</video>
          <title>Title of Video</title>
          <p>Description</p>
          <p>More info</p>
          <video>Video</video>
        </div>
         <div class="watch">
              <%= link_to "Watch", new_user_request_path(@volunteer), class: 'btn btn-primary' %>
              <%= link_to "Pause", profiles_path, class: 'btn btn-primary'%></div>
       </div>
       </div>
    </div>




