}

.fas.fa-utensils {
  margin-top: 50px;
  border-radius : 500px;
  border: 3px solid black;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  margin-right: 15px;
}

.fas.fa-theater-masks {
  margin-top: 50px;
  border-radius : 500px;
  border: 3px solid black;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  margin-right: 15px;
}

.icones {
  display: flex;
  align-items: center;
  justify-content: center;
}
  #send {
    margin-top: 0;
    width: 300px;
    padding-top: 7px;
  }

   p {
    width: 70%;
    list-style: none;
    margin-right: auto;
    margin-left: auto;
  }

  #video-container {
  overflow: hidden;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  border-radius: 15px;
  padding: 10px;
  text-align: center;
  background-repeat: no-repeat !important;
  background-size: cover;
  margin-top: 7px;
  margin-right: auto;
  margin-left: auto;
  height: 600px;
  }

  #back-btn {
    margin-top: 50px;
  }
  .row {
    display: flex;
    flex-wrap: wrap;
    margin-right: 36px;
}
.icone-card {
  display: inline-block;
}
 .list-info li {
  margin-right: 8%;
}
 </style>


<div class ="home-wrapper-2">
  <div class="container-info-profile">
        <%= link_to "Back", profiles_path, class: 'btn btn-primary', id: 'back-btn'%>
       <div class="row">
          <div class="col-5">
            <div class="card-volunteer1" style="background-image: url('<%= cl_image_path("shape-card-volunteer")%>');">
              <div class="photo-profile1" style="background-image: url('<%= cl_image_path("Photo-Volunteer") %>')"></div>
                <h2><%= @user.first_name %>  <%= @user.last_name %></h2>
                <ul class="list-info">
                  <li><%= @user.city %></li>
                  <li><%= @user.age %> Years old</li>
                  <li><%= @user.mobility %></li>
                </ul>
                <% @user.interests.each do |interest|  %>
                <% asset_url = "#{interest.title}.svg"%>
                  <div class="icone-card">
                    <%= image_tag(asset_url, width: 25, height:25, class: "")  %>
                  </div>
                <% end %>
                <br><br><br><br>
                <div class="biography">
                  <p>"<%= @user.biography %>"</p>
                </div>
              <div class="send">
                <%= link_to "Send message", new_user_request_path(@user), class: 'btn btn-primary button-action', id: 'send' %>
              </div>

            </div>
          </div>
          <div class="col-7" id="video-container">
            <div style="position:relative; padding-bottom:63.25%; padding-top:30px; height:0; overflow:hidden;">
              <iframe  width="415" height="610" src="https://www.youtube.com/embed/UArjj6dtuQM" frameborder="0" allowfullscreen style="position:absolute; top:0; left:0; width:100%; height:100%;"></iframe>
            </div>
          </div>
      </div>
  </div>
</div>















